<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KeroFruits.AppShell" 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:KeroFruits" 
    xmlns:view="clr-namespace:KeroFruits.View"
    
    Shell.FlyoutBehavior="Flyout" 
    Title="KeroFruits">

    <ShellContent
        Title="Main Page" 
        ContentTemplate="{DataTemplate local:MainPage}" 
        Route="MainPage" />

    <ShellContent
        Title="Clients Page" 
        ContentTemplate="{DataTemplate local:View.ClientsPage}" 
        Route="ClientsPage" />

    <ShellContent
        Title="Reservations Page" 
        ContentTemplate="{DataTemplate local:View.Reservations}" 
        Route="ReservationsPage" />

</Shell>
    
    
    
    



